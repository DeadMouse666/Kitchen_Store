{# templates/product/list.html.twig #}

<h1>Products list</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
    
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
            </tr>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary">Edit</a>
<a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
        {% else %}
            <tr>
                <td colspan="3">No products found.</td>
            </tr>
            
        {% endfor %}


    </tbody>
</table>
